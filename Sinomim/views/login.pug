extends layout

block moreCss
  link(href='/css/loginStyle.css', rel='stylesheet')

block nav
  ul#navbar
    a.navtab.unselectedTab(href="/"): li Home
    a.navtab.unselectedTab(href="/nameList"): li Market
    a.navtab.unselectedTab(href="/bargains"): li Bargains
    a.navtab(href="/login"): li Profile 

block content
  #errorField.flexCol
    - if(error != null) {
      - for(var i = 0; i < error.length; i++) {
        p.errorMsg= error[i].msg
      - }
    - }
  form#loginArea.flexCol(action=`/login${end}`, method='Post')
    h4#capsWarn Caps Lock is on!
    input#usernameFill.loginInput(type='text', placeholder='Username or Email Address', name='user', autocomplete='off')
    input#passwordFill.loginInput(type='password', placeholder='Password', name='pass')
    #loginSignup.marginAuto.flexRow
      section#logIn.btnStyle Sign In
      #noAccount.flexCol
        p Don't have an account already?
        a(href='/signup')
          section#signUp.marginAuto.btnStyle Sign up here!
  script(src='scripts/login.js')