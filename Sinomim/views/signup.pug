extends layout

block moreCss
  link(href='/css/loginStyle.css', rel='stylesheet')

block nav
  ul#navbar
    a.navtab.unselectedTab(href="/"): li Home
    a.navtab.unselectedTab(href="/nameList"): li Market
    a.navtab.unselectedTab(href="/bargains"): li Bargains
    a.navtab(href="/login"): li Profile 

block content
  #errorField.flexCol
    - if(error != null) {
      - for(var i = 0; i < error.length; i++) {
        p.errorMsg= error[i].msg
      - }
    - }
  form#loginArea.flexCol(action='signup', method='Post')
    h4#capsWarn Caps Lock is on!
    .signUpRow.flexRow
      input#usernameFill.loginInput(type='text', placeholder='Username', name='user', autocomplete='off')
      input#emailFill.loginInput(type='text', placeholder='Email Address', name='email', autocomplete='off')
    .signUpRow.flexRow
      input#passwordFill.loginInput(type='password', placeholder='Password', name='pass')
      input#confirmFill.loginInput(type='password', placeholder='Confirm Password' name='confirm')
    #loginSignup.marginAuto
      sectiont#logIn.btnStyle Register
      #noAccount.flexCol
        p Have an account already?
        a(href='/login')
          section#signUp.marginAuto.btnStyle Log in here!
  script(src='scripts/login.js')